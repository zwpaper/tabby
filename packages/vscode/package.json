{
  "name": "pochi",
  "version": "0.27.0-dev",
  "description": "Pochi is your AI powered team mate. Now available in research preview.",
  "displayName": "Pochi (Research Preview)",
  "publisher": "TabbyML",
  "homepage": "https://www.getpochi.com/",
  "license": "SEE LICENSE IN LICENSE.txt",
  "categories": [
    "Chat",
    "AI",
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "pochi",
    "ai",
    "llm",
    "chat",
    "copilot",
    "assistant",
    "agent",
    "claude"
  ],
  "icon": "assets/icons/logo128.png",
  "main": "./dist/extension.js",
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "customEditors": [
      {
        "viewType": "pochi.taskEditor",
        "displayName": "Pochi Task",
        "selector": [
          {
            "filenamePattern": "/pochi/task/**"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "pochi-task",
        "filenamePatterns": ["/pochi/task/**"],
        "icon": {
          "light": "assets/icons/logo128.png",
          "dark": "assets/icons/logo128.png"
        }
      }
    ],
    "authentication": [
      {
        "label": "Pochi",
        "id": "pochi"
      }
    ],
    "views": {
      "pochi": [
        {
          "id": "pochiSidebar",
          "type": "webview",
          "name": "Pochi"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pochi",
          "title": "Pochi",
          "icon": "$(code)"
        }
      ]
    },
    "commands": [
      {
        "command": "pochi.openLoginPage",
        "title": "Open Login Page",
        "category": "Pochi"
      },
      {
        "command": "pochi.logout",
        "title": "Logout",
        "category": "Pochi"
      },
      {
        "command": "pochi.loginWithToken",
        "title": "Login with Token",
        "category": "Pochi"
      },
      {
        "command": "pochi.editWorkspaceRules",
        "title": "Edit Workspace Rules",
        "category": "Pochi"
      },
      {
        "command": "pochi.webui.navigate.taskList",
        "title": "Show All Tasks",
        "icon": "$(code)",
        "category": "Pochi"
      },
      {
        "command": "pochi.webui.navigate.settings",
        "title": "Settings",
        "icon": "$(gear)",
        "category": "Pochi"
      },
      {
        "command": "pochi.openSettings",
        "title": "Open Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.addServer",
        "title": "Add MCP Server",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.openServerSettings",
        "title": "Open MCP Server Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.serverControl",
        "title": "MCP Server Control",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.toggleToolEnabled",
        "title": "Toggle MCP Tool Enabled",
        "category": "Pochi"
      },
      {
        "command": "pochi.openFileFromDiff",
        "title": "Open File",
        "category": "Pochi",
        "icon": "$(go-to-file)"
      },
      {
        "command": "pochi.newTaskPanel",
        "title": "New Task",
        "category": "Pochi",
        "icon": "$(add)"
      },
      {
        "command": "pochi.applyPochiLayout",
        "title": "Pochi Layout",
        "category": "Pochi",
        "icon": "$(layout)"
      },
      {
        "command": "pochi.openTerminal",
        "title": "Open Terminal",
        "category": "Pochi",
        "icon": "$(terminal)"
      },
      {
        "command": "pochi.openCustomModelSettings",
        "title": "Open Custom Model Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.createTaskInPanel",
        "title": "Open Worktree in Pochi",
        "category": "Pochi",
        "icon": "$(window)"
      },
      {
        "command": "pochi.clearGithubInfo",
        "title": "Clear GitHub Info",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.deleteThread",
        "title": "Delete Thread",
        "icon": "$(trash)",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.addComment",
        "title": "Add Comment",
        "icon": "$(comment-add)",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.deleteComment",
        "title": "Delete Comment",
        "icon": "$(trash)",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.startEditComment",
        "title": "Edit Comment",
        "icon": "$(edit)",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.saveEditComment",
        "title": "Save",
        "icon": "$(save)",
        "category": "Pochi"
      },
      {
        "command": "pochi.comments.cancelEditComment",
        "title": "Cancel",
        "icon": "$(close)",
        "category": "Pochi"
      }
    ],
    "menus": {
      "scm/sourceControl": [
        {
          "command": "pochi.createTaskInPanel",
          "group": "1_worktree@-1",
          "when": "scmProvider == git && scmProviderContext == worktree"
        }
      ],
      "editor/title": [
        {
          "command": "pochi.openFileFromDiff",
          "when": "resourceScheme == 'pochi-diff-changes'",
          "group": "navigation"
        },
        {
          "command": "pochi.newTaskPanel",
          "when": "resourceScheme == 'pochi-task'",
          "group": "navigation"
        },
        {
          "command": "pochi.openTerminal",
          "when": "resourceScheme == 'pochi-task'",
          "group": "navigation"
        },
        {
          "command": "pochi.applyPochiLayout",
          "when": "resourceScheme == 'pochi-task'",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "pochi.openLoginPage",
          "when": "false"
        },
        {
          "command": "pochi.logout",
          "title": "Pochi: Logout"
        },
        {
          "command": "pochi.loginWithToken",
          "title": "Pochi: Login with Token"
        },
        {
          "command": "pochi.webui.navigate.taskList",
          "when": "false"
        },
        {
          "command": "pochi.webui.navigate.settings",
          "when": "false"
        },
        {
          "command": "pochi.mcp.serverControl",
          "when": "false"
        },
        {
          "command": "pochi.mcp.toggleToolEnabled",
          "when": "false"
        },
        {
          "command": "pochi.createTaskInPanel",
          "when": "false"
        },
        {
          "command": "pochi.editWorkspaceRules",
          "when": "false"
        },
        {
          "command": "pochi.mcp.addServer",
          "when": "false"
        },
        {
          "command": "pochi.newTaskPanel",
          "when": "false"
        },
        {
          "command": "pochi.clearGithubInfo",
          "title": "Pochi: Clear GitHub Info"
        },
        {
          "command": "pochi.comments.deleteThread",
          "when": "false"
        },
        {
          "command": "pochi.comments.addComment",
          "when": "false"
        },
        {
          "command": "pochi.comments.deleteComment",
          "when": "false"
        },
        {
          "command": "pochi.comments.startEditComment",
          "when": "false"
        },
        {
          "command": "pochi.comments.saveEditComment",
          "when": "false"
        },
        {
          "command": "pochi.comments.cancelEditComment",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "pochi.webui.navigate.taskList",
          "when": "view == pochiSidebar",
          "group": "navigation@1"
        },
        {
          "command": "pochi.webui.navigate.settings",
          "when": "view == pochiSidebar",
          "group": "navigation@2"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "pochi.comments.addComment",
          "when": "commentController == 'pochi-comments' && !commentIsEmpty"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "pochi.comments.deleteThread",
          "when": "commentController == 'pochi-comments' && commentThread =~ /canDelete/"
        }
      ],
      "comments/comment/title": [
        {
          "command": "pochi.comments.deleteComment",
          "group": "inline@0",
          "when": "commentController == 'pochi-comments'"
        },
        {
          "command": "pochi.comments.startEditComment",
          "group": "inline@1",
          "when": "commentController == 'pochi-comments'"
        }
      ],
      "comments/comment/context": [
        {
          "command": "pochi.comments.saveEditComment",
          "group": "inline@0",
          "when": "commentController == 'pochi-comments' && !commentIsEmpty"
        },
        {
          "command": "pochi.comments.cancelEditComment",
          "group": "inline@1",
          "when": "commentController == 'pochi-comments'"
        }
      ]
    },
    "keybindings": [
      {
        "command": "pochi.toggleFocus",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      },
      {
        "command": "pochi.tabCompletion.accept",
        "key": "tab",
        "when": "editorTextFocus && pochiTabCompletionVisible"
      },
      {
        "command": "pochi.tabCompletion.reject",
        "key": "escape",
        "when": "editorTextFocus && pochiTabCompletionVisible || inlineSuggestionVisible"
      },
      {
        "command": "pochi.applyPochiLayoutWithCycleFocus",
        "key": "ctrl+l",
        "mac": "cmd+l"
      }
    ],
    "configuration": [
      {
        "title": "Pochi",
        "properties": {
          "pochi.advanced": {
            "order": 2,
            "default": {},
            "additionalProperties": false,
            "properties": {
              "tabCompletion": {
                "type": "object",
                "default": {},
                "additionalProperties": false,
                "properties": {
                  "disabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable Tab Completion."
                  },
                  "disabledLanguages": {
                    "type": "array",
                    "default": [],
                    "description": "Disable Tab Completion for specified languages.",
                    "items": {
                      "type": "string"
                    }
                  },
                  "providers": {
                    "type": "array",
                    "default": [
                      {
                        "type": "NES:pochi"
                      },
                      {
                        "type": "FIM:pochi"
                      }
                    ],
                    "description": "The Tab Completion providers to use.",
                    "items": {
                      "oneOf": [
                        {
                          "title": "Pochi FIM Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "FIM:pochi"
                            }
                          },
                          "required": ["type"]
                        },
                        {
                          "title": "OpenAI FIM Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "FIM:openai"
                            },
                            "baseURL": {
                              "type": "string"
                            },
                            "apiKey": {
                              "type": "string"
                            },
                            "model": {
                              "type": "string"
                            },
                            "promptTemplate": {
                              "type": "string"
                            }
                          },
                          "required": ["type", "baseURL"]
                        },
                        {
                          "title": "Google Vertex FIM Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "FIM:google-vertex-tuning"
                            },
                            "vertex": {
                              "type": "object",
                              "description": "Google Vertex AI credentials.",
                              "oneOf": [
                                {
                                  "title": "Service Account Key",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "service-account"
                                    },
                                    "serviceAccountKey": {
                                      "type": "string",
                                      "description": "The service account key JSON for authentication."
                                    },
                                    "location": {
                                      "type": "string",
                                      "description": "The Google Cloud location (e.g., 'us-central1')."
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "serviceAccountKey",
                                    "location"
                                  ]
                                },
                                {
                                  "title": "Access Token",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "access-token"
                                    },
                                    "accessToken": {
                                      "type": "string",
                                      "description": "A short-lived access token for authentication."
                                    },
                                    "projectId": {
                                      "type": "string",
                                      "description": "The Google Cloud Project ID."
                                    },
                                    "location": {
                                      "type": "string",
                                      "description": "The Google Cloud location (e.g., 'us-central1')."
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "accessToken",
                                    "projectId",
                                    "location"
                                  ]
                                },
                                {
                                  "title": "Model URL",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "model-url"
                                    },
                                    "issueUrl": {
                                      "type": "string"
                                    },
                                    "modelUrl": {
                                      "type": "string"
                                    },
                                    "timeout": {
                                      "type": "number"
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "issueUrl",
                                    "modelUrl",
                                    "timeout"
                                  ]
                                }
                              ]
                            },
                            "model": {
                              "type": "string"
                            },
                            "systemPrompt": {
                              "type": "string"
                            },
                            "promptTemplate": {
                              "type": "string"
                            }
                          },
                          "required": ["type", "vertex", "model"]
                        },
                        {
                          "title": "Pochi NES Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "NES:pochi"
                            }
                          },
                          "required": ["type"]
                        },
                        {
                          "title": "OpenAI NES Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "NES:openai"
                            },
                            "baseURL": {
                              "type": "string"
                            },
                            "apiKey": {
                              "type": "string"
                            },
                            "model": {
                              "type": "string"
                            }
                          },
                          "required": ["type", "baseURL", "model"]
                        },
                        {
                          "title": "Google Vertex NES Provider",
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "NES:google-vertex-tuning"
                            },
                            "vertex": {
                              "type": "object",
                              "description": "Google Vertex AI credentials.",
                              "oneOf": [
                                {
                                  "title": "Service Account Key",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "service-account"
                                    },
                                    "serviceAccountKey": {
                                      "type": "string",
                                      "description": "The service account key JSON for authentication."
                                    },
                                    "location": {
                                      "type": "string",
                                      "description": "The Google Cloud location (e.g., 'us-central1')."
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "serviceAccountKey",
                                    "location"
                                  ]
                                },
                                {
                                  "title": "Access Token",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "access-token"
                                    },
                                    "accessToken": {
                                      "type": "string",
                                      "description": "A short-lived access token for authentication."
                                    },
                                    "projectId": {
                                      "type": "string",
                                      "description": "The Google Cloud Project ID."
                                    },
                                    "location": {
                                      "type": "string",
                                      "description": "The Google Cloud location (e.g., 'us-central1')."
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "accessToken",
                                    "projectId",
                                    "location"
                                  ]
                                },
                                {
                                  "title": "Model URL",
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "const": "model-url"
                                    },
                                    "issueUrl": {
                                      "type": "string"
                                    },
                                    "modelUrl": {
                                      "type": "string"
                                    },
                                    "timeout": {
                                      "type": "number"
                                    }
                                  },
                                  "required": [
                                    "type",
                                    "issueUrl",
                                    "modelUrl",
                                    "timeout"
                                  ]
                                }
                              ]
                            },
                            "model": {
                              "type": "string"
                            }
                          },
                          "required": ["type", "vertex", "model"]
                        }
                      ]
                    }
                  }
                }
              },
              "webviewLogLevel": {
                "type": "string",
                "default": "",
                "description": "Pochi webview UI log level"
              },
              "pochiLayout": {
                "type": "object",
                "default": {},
                "additionalProperties": false,
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable Pochi Layout."
                  }
                }
              },
              "logToFile": {
                "type": "object",
                "default": {},
                "additionalProperties": false,
                "properties": {
                  "level": {
                    "type": "string",
                    "enum": [
                      "off",
                      "fatal",
                      "error",
                      "warn",
                      "info",
                      "debug",
                      "trace"
                    ],
                    "default": "off",
                    "description": "Set the log level for file logging."
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "private": true,
  "scripts": {
    "copy:webui": "rm -rf ./assets/webview-ui/dist && bun ./scripts/copy-webui-dist.js",
    "build:vscode": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node --minify",
    "build": "npm-run-all --parallel build:vscode copy:webui",
    "vscode:prepublish": "bun turbo build",
    "vscode:package": "vsce package --no-dependencies --allow-missing-repository",
    "vscode:publish": "vsce publish --no-dependencies --allow-missing-repository",
    "vscode:publish-prerelease": "vsce publish --no-dependencies --allow-missing-repository --pre-release",
    "ovsx:publish": "ovsx publish --no-dependencies --pat $OVSX_PAT",
    "ovsx:publish-prerelease": "ovsx publish --no-dependencies --pre-release --pat $OVSX_PAT",
    "publish": "bun run vscode:publish && bun run ovsx:publish",
    "publish-prerelease": "bun run vscode:publish-prerelease && bun run ovsx:publish-prerelease",
    "watch:webui": "cd ../vscode-webui && bun run start",
    "watch:vscode": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node --watch",
    "watch": "npm-run-all --parallel watch:vscode watch:webui",
    "start": "code --extensionDevelopmentPath=$PWD",
    "dev": "npm-run-all --parallel watch start",
    "tsc": "tsc --noEmit",
    "test": "xvfb-maybe vscode-test",
    "test:coverage": "xvfb-maybe vscode-test --coverage",
    "release": "bunx bumpp --tag=vscode@%s",
    "test:integration": "wdio run ./wdio.conf.ts"
  },
  "dependencies": {
    "@ai-sdk/google-vertex": "catalog:",
    "@getpochi/common": "workspace:*",
    "@getpochi/vendor-codex": "workspace:*",
    "@getpochi/vendor-gemini-cli": "workspace:*",
    "@getpochi/vendor-github-copilot": "workspace:*",
    "@getpochi/vendor-pochi": "workspace:*",
    "@getpochi/vendor-qwen-code": "workspace:*",
    "@leeoniya/ufuzzy": "catalog:",
    "@orama/orama": "^3.1.11",
    "@preact/signals-core": "catalog:",
    "@quilted/threads": "catalog:",
    "@vscode-logging/logger": "^2.0.0",
    "ai": "catalog:",
    "canvaskit-wasm": "^0.40.0",
    "deepmerge-ts": "^7.1.5",
    "diff": "^7.0.0",
    "fast-deep-equal": "^3.1.3",
    "fast-levenshtein": "^3.0.0",
    "iterator-helpers-polyfill": "^3.0.1",
    "jsonc-parser": "catalog:",
    "jszip": "^3.10.1",
    "linkify-it": "^5.0.0",
    "lru-cache": "^11.1.0",
    "object-hash": "^3.0.0",
    "posthog-node": "^4.17.2",
    "project-name-generator": "^2.1.9",
    "reflect-metadata": "^0.2.2",
    "remeda": "catalog:",
    "run-exclusive": "catalog:",
    "simple-git": "^3.28.0",
    "tsyringe": "^4.10.0",
    "vscode-diff": "^3.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ai-sdk/provider": "catalog:",
    "@getpochi/tools": "workspace:*",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/diff": "^7.0.2",
    "@types/object-hash": "^3.0.6",
    "@types/project-name-generator": "^2.1.3",
    "@types/proxyquire": "^1.3.31",
    "@types/node": "^20",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.82.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.3.2",
    "@wdio/globals": "^9.23.0",
    "@wdio/local-runner": "^9.23.0",
    "@wdio/mocha-framework": "^9.23.0",
    "@wdio/spec-reporter": "^9.20.0",
    "esbuild-register": "^3.6.0",
    "expect-webdriverio": "^5.6.1",
    "extensionless": "^2.0.2",
    "node-pty": "^1.0.0",
    "ovsx": "^0.10.2",
    "proxyquire": "^2.1.3",
    "semver": "^7.7.1",
    "sinon": "^20.0.0",
    "tsconfig-paths": "^4.2.0",
    "vscode-textmate": "^9.2.1",
    "wdio-vscode-service": "^6.1.4",
    "wdio-wait-for": "^3.1.1",
    "xvfb-maybe": "^0.2.1"
  },
  "vsce": {
    "dependencies": false
  }
}
