{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/*/routeTree.gen.ts",
      "*.test.ts",
      "*.story.tsx",

      "private/packages/label-studio/data",
      "private/packages/website/src/components/ui/*.tsx",
      "private/packages/server/migrations/*.ts",
      "private/packages/server/src/lib/tool-call-middleware/relaxed-json.ts",
      "private/packages/db/src/schema.d.ts",
      "private/packages/server/scripts/migrate-db-schema.ts",

      "packages/vscode/.vscode-test",
      "packages/vscode/out",

      "packages/docs/**",

      "**/.wrangler",
      "**/node_modules/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
