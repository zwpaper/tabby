{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "tsc": {
      "dependsOn": ["^tsc"]
    },
    "test": {},
    "test:integration": {
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["tsc"],
      "outputs": ["dist/**"]
    }
  },
  "globalPassThroughEnv": ["NODE_ENV", "POCHI_API_KEY"],
  "boundaries": {
    "implicitDependencies": ["vitest"],
    "tags": {
      "public": {
        "dependencies": {
          "allow": ["public"]
        }
      }
    }
  }
}
